page{
  height:100%;
}
.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}

.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100%;
  align-items: center;
  box-sizing: border-box;
}

.card-details {
  background-color: rgba(245, 190, 81, 0.6);
  height: 41%;
  width: 680rpx;
  margin: 50rpx;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 16rpx;
}

.section-title {
  font: 24px;
  font-weight: bold;
  padding-top: 10px;
  padding-bottom: 10px;
  margin-top: 80rpx;
}

.input {
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 5px;
  height: 65rpx;
  margin-top: 36rpx;
  width: 182px;
  margin-bottom: 36rpx;
  padding: 0 32rpx;
}

.login-btn{
  color:#34303D;
  background-color:#F5BE51;
  font-family:"Poppins";
  border: 0.5px solid rgba(255, 255, 255, 0.9);
  margin-top: 36rpx;
  width: 140px;
  border-radius: 5px;
  margin-bottom: 36rpx;
}
